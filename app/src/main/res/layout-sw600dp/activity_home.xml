<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="540dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/scanny_home"
                    android:scaleType="fitXY"
                    android:src="@drawable/wave_top" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="480dp"
                        android:layout_height="480dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/scanny_for_home" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvScanning"
                    android:layout_width="350dp"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/fancy_card_background_pink"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvScanner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="@string/lets_scan"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:letterSpacing="0"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ivScanner"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:rotation="45"
                            android:contentDescription="@string/lets_scan"
                            app:srcCompat="@drawable/scanner2" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvQuiz"
                    android:layout_width="350dp"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/fancy_card_background_green"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvQuiz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:textAllCaps="true"
                            android:text="@string/lets_play_quiz"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:letterSpacing="0"
                            android:textSize="28sp"
                            android:textStyle="bold"/>

                        <ImageView
                            android:id="@+id/ivQuiz"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:contentDescription="@string/lets_play_quiz"
                            app:srcCompat="@drawable/lightbub2" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvTutorial"
                    android:layout_width="350dp"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/fancy_card_background_purple">

                        <ImageView
                            android:id="@+id/ivTutorial"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:contentDescription="@string/lets_scan"
                            app:srcCompat="@drawable/info" />

                        <TextView
                            android:id="@+id/tvTutorial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/start_tutorial"
                            android:textColor="@color/white"
                            android:textSize="28sp"
                            android:textAllCaps="true"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvStats"
                    android:layout_width="350dp"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/fancy_card_background_blue">

                        <ImageView
                            android:id="@+id/ivStats"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:contentDescription="@string/stats"
                            app:srcCompat="@drawable/stats2" />

                        <TextView
                            android:id="@+id/tvStats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/stats"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="28sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_navigation" />
</FrameLayout>
