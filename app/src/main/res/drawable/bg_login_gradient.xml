<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#FFB300"
            android:centerColor="#E91E63"
            android:endColor="#7C4DFF"
            />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#FFD740"
            android:centerColor="#FF6E40"
            android:endColor="#7C4DFF"
            />
        </shape>
    </item>

</selector>
