<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.UI_UX_Demo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="textInputStyle">@style/AppTextInput</item>
        <item name="colorControlActivated">@color/light_gray</item>
        <item name="colorControlHighlight">@color/light_gray</item>
    </style>

    <style name="Theme.MyApp.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowSplashScreenBackground">@color/scanny_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/profile3</item>
        <item name="windowSplashScreenAnimationDuration">5000</item>
        <item name="postSplashScreenTheme">@style/Theme.UI_UX_Demo</item>
        <item name="textInputStyle">@style/AppTextInput</item>
        <item name="colorControlActivated">@color/light_gray</item>
        <item name="colorControlHighlight">@color/light_gray</item>
    </style>

    <style name="AppTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/light_gray</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="color">@color/light_gray</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textColorHighlight">@color/light_gray</item>
        <item name="android:textCursorDrawable">@drawable/cursor_gray</item>
    </style>

</resources>